  tabuleiro[linha][convertColuna-2]=0;

  //Imprime o cabe√ßalho das colunas
   System.out.println("   1 2 3 4 5 6 7");
   System.out.println("  ______________");


    for (int i = 0; i < linhaTab; i++) {
    if(i==0){
